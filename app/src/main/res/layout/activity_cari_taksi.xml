<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="id.can.web.taxionline.Activity.CariTaksiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_taxi_kota_asal"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:src="@drawable/ic_taxi_berangkat"
                android:padding="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kota Asal" />

                <TextView
                    android:id="@+id/tv_taxi_kota_asal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Kota "
                    android:textColor="#000"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#eaeaea" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_taxi_kota_tujuan"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:src="@drawable/ic_taxi_pulang"
                android:padding="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kota Tujuan" />

                <TextView
                    android:id="@+id/tv_taxi_kota_tujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Kota "
                    android:textColor="#000"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#eaeaea" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_taxi_tgl_berangkat"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:src="@drawable/ic_tanggal_berangkat"
                android:padding="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Berangkat" />

                <TextView
                    android:id="@+id/tv_taxi_tgl_berangkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Tanggal"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#eaeaea" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_taxi_jumlah_kursi"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:src="@drawable/ic_jumlah_kursi"
                android:padding="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Kursi" />

                <TextView
                    android:id="@+id/tv_taxi_jumlah_kursi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 kursi"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#eaeaea" />

            </LinearLayout>


        </LinearLayout>
        
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_cari_taxi"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_margin="6dp"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CARI"
                android:textColor="#fff"
                android:textSize="24dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
    
</RelativeLayout>
