<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.can.web.taxionline.Fragment.FragmentHistoryOrder">


    <ProgressBar
        android:id="@+id/progress_history_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_below="@+id/progress_history_order"
        android:id="@+id/status_history_order"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rc_list_list_history"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
